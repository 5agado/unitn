<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- RESOURCE -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>connpool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!-- LISTENER -->
    <filter-mapping>
        <filter-name>AdminAccessControl</filter-name>
        <url-pattern>/jsp/adminPages/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessControl</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserAccessControl</filter-name>
        <url-pattern>/jsp/userPages/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserAccessControl</filter-name>
        <url-pattern>/user/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AlreadyAuthenticated</filter-name>
        <url-pattern>/jsp/login.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AlreadyAuthenticated</filter-name>
        <url-pattern>/jsp/register.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.WebAppContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>AlreadyAuthenticated</filter-name>
        <filter-class>filters.AlreadyAuthenticated</filter-class>
    </filter>
    <filter>
        <filter-name>UserAccessControl</filter-name>
        <filter-class>filters.UserAccessControl</filter-class>
    </filter>
    <filter>
        <filter-name>AdminAccessControl</filter-name>
        <filter-class>filters.AdminAccessControl</filter-class>
    </filter>
    <!-- WELCOME FILE -->
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <!-- ERROR PAGES -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp_private/errorPages/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp_private/errorPages/500.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewAuction</servlet-name>
        <servlet-class>servlets.NewAuctionServlet</servlet-class>
        <init-param>
            <param-name>
                imgsDir
            </param-name>
            <param-value>
                /img/
            </param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>NewBid</servlet-name>
        <servlet-class>servlets.NewBidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvalidateAuction</servlet-name>
        <servlet-class>servlets.InvalidateAuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProduct</servlet-name>
        <servlet-class>servlets.GetProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProducts</servlet-name>
        <servlet-class>servlets.SearchProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadData</servlet-name>
        <servlet-class>servlets.LoadDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateExpiredAuctions</servlet-name>
        <servlet-class>servlets.UpdateExpiredAuctionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSales</servlet-name>
        <servlet-class>servlets.AdminSalesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCurrentAuctions</servlet-name>
        <servlet-class>servlets.AdminCurrentAuctionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateExcel</servlet-name>
        <servlet-class>servlets.GenerateExcelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProduct</servlet-name>
        <url-pattern>/GetProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewAuction</servlet-name>
        <url-pattern>/user/NewAuction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProducts</servlet-name>
        <url-pattern>/user/SearchProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewBid</servlet-name>
        <url-pattern>/user/NewBid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadData</servlet-name>
        <url-pattern>/user/LoadData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvalidateAuction</servlet-name>
        <url-pattern>/admin/InvalidateAuction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateExpiredAuctions</servlet-name>
        <url-pattern>/admin/UpdateExpiredAuctions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSales</servlet-name>
        <url-pattern>/admin/AdminSales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminCurrentAuctions</servlet-name>
        <url-pattern>/admin/AdminCurrentAuctions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateExcel</servlet-name>
        <url-pattern>/admin/GenerateExcel</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
